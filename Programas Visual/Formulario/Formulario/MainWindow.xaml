<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Formulario"
        xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp" x:Class="Formulario.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="1200">
    <Window.Resources>
        <ControlTemplate x:Key="ButtonControlTemplate1" TargetType="{x:Type Button}">
            <fa:IconImage Icon="Microphone"  HorizontalAlignment="Left"  VerticalAlignment="Top" Foreground="#FF78B9B6" />            
        </ControlTemplate>
    </Window.Resources>
    <Button Content="Button" HorizontalAlignment="Left" Margin="340,392,0,0" VerticalAlignment="Top" Width="167" Height="57.96" Background="#FF868297" BorderBrush="{x:Null}" Template="{DynamicResource ButtonControlTemplate1}"/>


</Window>
