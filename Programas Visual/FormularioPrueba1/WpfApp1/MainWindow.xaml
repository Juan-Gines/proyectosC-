<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="1000" WindowStartupLocation="CenterScreen" ResizeMode="CanResizeWithGrip" AllowsTransparency="True" WindowStyle="None" >
    <Window.Resources>


        <Style x:Key="BotonIzq" TargetType="{x:Type Button}">
            <Setter Property="Background" Value="#FF043065"/>
            <Setter Property="BorderBrush" Value="{x:Null}"/>
            <Setter Property="Foreground" Value="#FFE5CFF1"/>
            <Setter Property="Height" Value="60"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <StackPanel Orientation="Horizontal" >
                            <DockPanel Width="7" Name="borde"></DockPanel>
                            <fa:IconImage Name="icon" Icon="ClipboardList" Height="40" Width="50" Foreground="#FFE5CFF1"></fa:IconImage>
                            <TextBlock Name="texto" Text="OT" Padding="15" FontSize="20" Width="163" Foreground="#FFE5CFF1"></TextBlock>
                        </StackPanel>
                        <ControlTemplate.Triggers>
                            <MultiTrigger >
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsMouseOver" Value="True"></Condition>
                                    <Condition Property="IsDefault" Value="False"></Condition>
                                </MultiTrigger.Conditions>
                                <MultiTrigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Duration="0:0:1" Storyboard.TargetProperty="Opacity" From="0.1" To="1" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </MultiTrigger.EnterActions>
                            </MultiTrigger>

                            <Trigger Property="IsDefault" Value="true">
                                <Setter Property="Background" TargetName="borde" Value="Gold"></Setter>
                                <Setter Property="Foreground" TargetName="icon" Value="Gold"></Setter>
                                <Setter Property="Foreground" TargetName="texto" Value="Gold"></Setter>
                            </Trigger>

                            <Trigger Property="IsMouseOver" Value="true">
                                <Setter Property="Background" TargetName="borde" Value="#FF50B84B"></Setter>
                                <Setter Property="Foreground" TargetName="icon" Value="#FF50B84B"></Setter>
                                <Setter Property="Foreground" TargetName="texto" Value="#FF50B84B"></Setter>
                            </Trigger>

                            <Trigger Property="IsPressed" Value="true">
                                <Setter Property="Background" TargetName="borde" Value="Gold"></Setter>
                                <Setter Property="Foreground" TargetName="icon" Value="Gold"></Setter>
                                <Setter Property="Foreground" TargetName="texto" Value="Gold"></Setter>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="false"/>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="BotonIzq1" TargetType="{x:Type Button}">
            <Setter Property="Background" Value="#FF043065"/>
            <Setter Property="BorderBrush" Value="{x:Null}"/>
            <Setter Property="Foreground" Value="#FFE5CFF1"/>
            <Setter Property="Height" Value="60"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <StackPanel Orientation="Horizontal">
                            <DockPanel Width="7" Name="borde"></DockPanel>
                            <fa:IconImage Name="icon" Icon="Users" Height="40" Width="50" Foreground="#FFE5CFF1"></fa:IconImage>
                            <TextBlock Name="texto" Text="Empleados" Padding="15" FontSize="20" Width="163" Foreground="#FFE5CFF1"></TextBlock>
                        </StackPanel>
                        <ControlTemplate.Triggers>
                            <MultiTrigger x:Name="Hola">
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsMouseOver" Value="True"></Condition>
                                    <Condition Property="IsDefault" Value="False"></Condition>
                                </MultiTrigger.Conditions>
                                <MultiTrigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Duration="0:0:1" Storyboard.TargetProperty="Opacity" From="0.1" To="1"
                                                              />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </MultiTrigger.EnterActions>

                            </MultiTrigger>
                            <Trigger Property="IsDefault" Value="true">
                                <Setter Property="Background" TargetName="borde" Value="Gold"></Setter>
                                <Setter Property="Foreground" TargetName="icon" Value="Gold"></Setter>
                                <Setter Property="Foreground" TargetName="texto" Value="Gold"></Setter>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="true">
                                <Setter Property="Background" TargetName="borde" Value="#FF50B84B"></Setter>
                                <Setter Property="Foreground" TargetName="icon" Value="#FF50B84B"></Setter>
                                <Setter Property="Foreground" TargetName="texto" Value="#FF50B84B"></Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="true">
                                <Setter Property="Background" TargetName="borde" Value="Gold"></Setter>
                                <Setter Property="Foreground" TargetName="icon" Value="Gold"></Setter>
                                <Setter Property="Foreground" TargetName="texto" Value="Gold"></Setter>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="false"/>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="BotonIzq2" TargetType="{x:Type Button}">
            <Setter Property="Background" Value="#FF043065"/>
            <Setter Property="BorderBrush" Value="{x:Null}"/>
            <Setter Property="Foreground" Value="#FFE5CFF1"/>
            <Setter Property="Height" Value="60"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <StackPanel Orientation="Horizontal">
                            <DockPanel Width="7" Name="borde"></DockPanel>
                            <fa:IconImage Name="icon" Icon="DiceD6" Height="40" Width="50" Foreground="#FFE5CFF1"></fa:IconImage>
                            <TextBlock Name="texto" Text="Moldes" Padding="15" FontSize="20" Width="163" Foreground="#FFE5CFF1"></TextBlock>
                        </StackPanel>
                        <ControlTemplate.Triggers>
                            <MultiTrigger x:Name="Hola">
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsMouseOver" Value="True"></Condition>
